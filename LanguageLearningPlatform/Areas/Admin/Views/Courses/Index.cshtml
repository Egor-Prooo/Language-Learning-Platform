@model IEnumerable<LanguageLearningPlatform.Data.Models.Course>

@{
    ViewData["Title"] = "Manage Courses";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0"><i class="fas fa-book me-2"></i>Courses</h1>
        <p class="text-muted small mb-0">@Model.Count() total courses</p>
    </div>
    <a asp-area="Admin" asp-controller="Courses" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>New Course
    </a>
</div>

<!-- Stats Bar -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="mini-stat-card" style="border-left-color: #10B981;">
            <div class="fw-bold" style="font-size:1.5rem; color:#10B981;">
                @Model.Count(c => c.IsPublished)
            </div>
            <div class="text-muted small">Published</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mini-stat-card" style="border-left-color: #6B7280;">
            <div class="fw-bold" style="font-size:1.5rem; color:#6B7280;">
                @Model.Count(c => !c.IsPublished)
            </div>
            <div class="text-muted small">Drafts</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mini-stat-card" style="border-left-color: #F59E0B;">
            <div class="fw-bold" style="font-size:1.5rem; color:#F59E0B;">
                @Model.Sum(c => c.Enrollments.Count)
            </div>
            <div class="text-muted small">Total Enrollments</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mini-stat-card" style="border-left-color: #4F46E5;">
            <div class="fw-bold" style="font-size:1.5rem; color:#4F46E5;">
                @Model.Sum(c => c.Lessons.Count)
            </div>
            <div class="text-muted small">Total Lessons</div>
        </div>
    </div>
</div>

<!-- Filter Bar -->
<div class="admin-card mb-4">
    <div class="admin-card-body">
        <div class="row g-3">
            <div class="col-md-5">
                <input type="text" id="courseSearch" class="form-control"
                       placeholder="Search by title or language" />
            </div>
            <div class="col-md-3">
                <select id="levelFilter" class="form-select">
                    <option value="">All Levels</option>
                    <option>Beginner</option>
                    <option>Intermediate</option>
                    <option>Advanced</option>
                </select>
            </div>
            <div class="col-md-2">
                <select id="statusFilter" class="form-select">
                    <option value="">All Status</option>
                    <option value="published">Published</option>
                    <option value="draft">Draft</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" id="clearFilters">
                    <i class="fas fa-times me-1"></i>Clear
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Courses Table -->
<div class="admin-card">
    <div class="admin-card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Course</th>
                        <th>Level</th>
                        <th>Lessons</th>
                        <th>Enrolled</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model.OrderByDescending(c => c.Enrollments.Count))
                    {
                        var statusVal = course.IsPublished ? "published" : "draft";

                        <tr class="course-row"
                            data-title="@course.Title.ToLower()"
                            data-lang="@course.Language.ToLower()"
                            data-level="@course.Level"
                            data-status="@statusVal">

                            <td class="ps-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="course-icon-mini rounded-3 d-flex align-items-center justify-content-center flex-shrink-0">
                                        @if (course.Language.ToLower() == "spanish")
                                        {
                                            <i class="fas fa-language"></i>
                                        }
                                        else if (course.Language.ToLower() == "french")
                                        {
                                            <i class="fas fa-flag"></i>
                                        }
                                        else if (course.Language.ToLower() == "german")
                                        {
                                            <i class="fas fa-book"></i>
                                        }
                                        else if (course.Language.ToLower() == "japanese")
                                        {
                                            <i class="fas fa-yen-sign"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-globe"></i>
                                        }
                                    </div>
                                    <div>
                                        <div class="fw-semibold" style="font-size:0.9rem;">@course.Title</div>
                                        <div class="text-muted" style="font-size:0.78rem;">
                                            <i class="fas fa-globe me-1"></i>@course.Language
                                            <span class="ms-2">
                                                <i class="fas fa-clock me-1"></i>@course.EstimatedHours h
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>

                            <td>
                                @if (course.Level == "Beginner")
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success">Beginner</span>
                                }
                                else if (course.Level == "Intermediate")
                                {
                                    <span class="badge rounded-pill bg-warning-subtle text-warning">Intermediate</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-danger-subtle text-danger">Advanced</span>
                                }
                            </td>

                            <td>
                                <span class="fw-semibold">@course.Lessons.Count</span>
                                <span class="text-muted small ms-1">lessons</span>
                            </td>

                            <td>
                                <span class="fw-bold text-primary">@course.Enrollments.Count</span>
                                <span class="text-muted small ms-1">students</span>
                            </td>

                            <td>
                                @if (course.IsPublished)
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary-subtle text-secondary">Draft</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <div class="d-flex gap-1 justify-content-end">
                                    <a asp-area="" asp-controller="Courses" asp-action="Details"
                                       asp-route-id="@course.Id"
                                       class="btn btn-sm btn-outline-secondary" title="Preview" target="_blank">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="Courses" asp-action="Edit"
                                       asp-route-id="@course.Id"
                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Courses" asp-action="TogglePublish"
                                          method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@course.Id" />
                                        @if (course.IsPublished)
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-warning"
                                                    title="Unpublish">
                                                <i class="fas fa-eye-slash"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-success"
                                                    title="Publish">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                    </form>
                                    <form asp-area="Admin" asp-controller="Courses" asp-action="Delete"
                                          method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@course.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                title="Delete"
                                                onclick="return confirm('Delete this course? This cannot be undone.')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="emptyState" class="text-center py-5 d-none">
            <i class="fas fa-book text-muted" style="font-size:3rem;opacity:0.3;"></i>
            <p class="mt-3 text-muted">No courses match your search.</p>
        </div>
    </div>
</div>

<style>
    .admin-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        overflow: hidden;
    }

    .admin-card-body {
        padding: 1.25rem;
    }

    .mini-stat-card {
        background: white;
        border-radius: 10px;
        border-left: 4px solid transparent;
        padding: 1rem 1.25rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .course-icon-mini {
        width: 42px;
        height: 42px;
        font-size: 1.2rem;
        color: white;
        background: linear-gradient(135deg, #4F46E5, #7C3AED);
    }

    .table > :not(caption) > * > * {
        padding: 0.85rem 0.75rem;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            var search       = document.getElementById('courseSearch');
            var levelFilter  = document.getElementById('levelFilter');
            var statusFilter = document.getElementById('statusFilter');
            var rows         = document.querySelectorAll('.course-row');
            var emptyState   = document.getElementById('emptyState');

            function applyFilters() {
                var q      = search.value.toLowerCase();
                var level  = levelFilter.value;
                var status = statusFilter.value;
                var visible = 0;

                rows.forEach(function(row) {
                    var textMatch   = row.dataset.title.includes(q) || row.dataset.lang.includes(q);
                    var levelMatch  = !level  || row.dataset.level  === level;
                    var statusMatch = !status || row.dataset.status === status;
                    var show = textMatch && levelMatch && statusMatch;
                    row.style.display = show ? '' : 'none';
                    if (show) visible++;
                });

                if (visible > 0) {
                    emptyState.classList.add('d-none');
                } else {
                    emptyState.classList.remove('d-none');
                }
            }

            search.addEventListener('input', applyFilters);
            levelFilter.addEventListener('change', applyFilters);
            statusFilter.addEventListener('change', applyFilters);

            document.getElementById('clearFilters').addEventListener('click', function () {
                search.value       = '';
                levelFilter.value  = '';
                statusFilter.value = '';
                applyFilters();
            });
        });
    </script>
}