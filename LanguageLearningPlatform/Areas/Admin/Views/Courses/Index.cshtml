@model IEnumerable<LanguageLearningPlatform.Data.Models.Course>

@{
    ViewData["Title"] = "Manage Courses";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">
        <i class="fas fa-book me-2"></i>Manage Courses
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create New Course
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Language</th>
                        <th>Level</th>
                        <th>Creator</th>
                        <th>Lessons</th>
                        <th>Enrollments</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>
                                <strong>@course.Title</strong>
                            </td>
                            <td>
                                <span class="badge bg-info">@course.Language</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@course.Level</span>
                            </td>
                            <td>
                                @if (course.Creator != null)
                                {
                                    <span>@course.Creator.FirstName @course.Creator.LastName</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-primary">@course.Lessons.Count</span>
                            </td>
                            <td>
                                <span class="badge bg-success">@course.Enrollments.Count</span>
                            </td>
                            <td>
                                @if (course.IsPublished)
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Draft</span>
                                }
                            </td>
                            <td>
                                <small class="text-muted">@course.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@course.Id"
                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="TogglePublish" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@course.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-info"
                                                title="@(course.IsPublished ? "Unpublish" : "Publish")">
                                            <i class="fas fa-@(course.IsPublished ? "eye-slash" : "eye")"></i>
                                        </button>
                                    </form>
                                    <a asp-action="Delete" asp-route-id="@course.Id"
                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-book" style="font-size: 4rem; color: #ccc;"></i>
                <p class="mt-3 text-muted">No courses found</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create First Course
                </a>
            </div>
        }
    </div>
</div>