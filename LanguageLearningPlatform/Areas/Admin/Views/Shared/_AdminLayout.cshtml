<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #F1F5F9;
            margin: 0;
        }

        #admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        #sidebar {
            width: 240px;
            min-height: 100vh;
            background: #1E293B;
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar-brand {
            padding: 1.25rem 1.5rem;
            background: #0F172A;
            color: white;
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
            text-decoration: none;
            border-bottom: 1px solid rgba(255,255,255,0.08);
        }

            .sidebar-brand .brand-icon {
                width: 32px;
                height: 32px;
                background: #4F46E5;
                border-radius: 8px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 0.9rem;
                flex-shrink: 0;
            }

        .sidebar-section-label {
            padding: 1rem 1.25rem 0.4rem;
            font-size: 0.68rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #64748B;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.65rem 1.25rem;
            color: #94A3B8;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.15s ease;
            margin: 0 0.5rem;
            border-radius: 8px;
        }

            .sidebar-link:hover {
                color: white;
                background: rgba(255,255,255,0.06);
            }

            .sidebar-link.active {
                color: white;
                background: #4F46E5;
            }

            .sidebar-link .sidebar-icon {
                width: 20px;
                text-align: center;
                font-size: 0.9rem;
                flex-shrink: 0;
            }

        .sidebar-divider {
            border: none;
            border-top: 1px solid rgba(255,255,255,0.07);
            margin: 0.75rem 1rem;
        }

        /* Main Content */
        #main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-width: 0;
        }

        /* Top Bar */
        #topbar {
            background: white;
            border-bottom: 1px solid #E2E8F0;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 50;
        }

            #topbar .topbar-title {
                font-weight: 600;
                font-size: 0.95rem;
                color: #1E293B;
            }

        /* Page Content */
        #page-content {
            padding: 1.5rem;
            flex: 1;
        }

        /* Alerts */
        .admin-alert {
            border-radius: 10px;
            margin-bottom: 1.25rem;
            font-size: 0.9rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            #sidebar {
                display: none;
            }

                #sidebar.show {
                    display: flex;
                    position: fixed;
                    z-index: 1000;
                }
        }
    </style>
</head>
<body>
    <div id="admin-wrapper">

        <!-- SIDEBAR -->
        <nav id="sidebar">
            <a href="/" class="sidebar-brand">
                <div class="brand-icon"><i class="fas fa-shield-alt"></i></div>
                <span>LingoLearn</span>
            </a>

            <div class="pt-2">
                <div class="sidebar-section-label">Overview</div>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                   class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <span class="sidebar-icon"><i class="fas fa-chart-pie"></i></span>
                    Dashboard
                </a>

                <div class="sidebar-section-label">Management</div>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                   class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
                    <span class="sidebar-icon"><i class="fas fa-users"></i></span>
                    Users
                </a>
                <a asp-area="Admin" asp-controller="Courses" asp-action="Index"
                   class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Courses" ? "active" : "")">
                    <span class="sidebar-icon"><i class="fas fa-book"></i></span>
                    Courses
                </a>

                <hr class="sidebar-divider" />

                <div class="sidebar-section-label">Site</div>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link">
                    <span class="sidebar-icon"><i class="fas fa-external-link-alt"></i></span>
                    View Site
                </a>
            </div>
        </nav>

        <!-- MAIN CONTENT -->
        <div id="main-content">

            <!-- Top Bar -->
            <div id="topbar">
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-sm btn-light d-md-none" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <span class="topbar-title">@ViewData["Title"]</span>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <span class="text-muted small d-none d-md-inline">
                        <i class="fas fa-user-circle me-1"></i>@User.Identity?.Name
                    </span>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>

            <!-- Page Content -->
            <div id="page-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success admin-alert alert-dismissible fade show">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger admin-alert alert-dismissible fade show">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle')?.addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('show');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>