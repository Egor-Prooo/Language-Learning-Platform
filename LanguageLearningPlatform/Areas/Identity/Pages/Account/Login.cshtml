@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="course-card">
                <div class="course-card-body">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-sign-in-alt" style="font-size: 3rem; color: var(--primary-color);"></i>
                        </div>
                        <h1 class="h3 fw-bold">Welcome Back!</h1>
                        <p class="text-secondary">Sign in to continue your learning journey</p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Input.Email" class="form-control form-select-custom"
                                   autocomplete="username" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input asp-for="Input.Password" class="form-control form-select-custom"
                                   autocomplete="current-password" type="password" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Remember me
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-enroll w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Log In
                        </button>

                        <div class="text-center mb-3">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small">
                                <i class="fas fa-question-circle me-1"></i>Forgot your password?
                            </a>
                        </div>

                        <hr />

                        <div class="text-center">
                            <p class="text-secondary small mb-2">Don't have an account?</p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                               class="btn btn-outline-primary w-100">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </a>
                        </div>
                    </form>

                    <!-- Demo Account Info -->
                    <div class="alert alert-info mt-4 small">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Demo Account:</strong><br />
                        Email: demo@example.com<br />
                        Password: Password123!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}