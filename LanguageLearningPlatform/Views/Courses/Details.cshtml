@model LanguageLearningPlatform.Data.Models.Course

@{
    ViewData["Title"] = Model.Title;
    var isEnrolled = ViewBag.IsEnrolled as bool? ?? false;
    var progress = ViewBag.Progress as LanguageLearningPlatform.Data.Models.Progress;
}

<div class="container my-4">
    <div class="row g-4">

        <!-- MAIN CONTENT -->
        <div class="col-lg-8">

            <!-- Page Header -->
            <div class="page-header mb-4">
                <nav aria-label="breadcrumb" class="mb-2">
                    <ol class="breadcrumb mb-0" style="font-size: 0.875rem;">
                        <li class="breadcrumb-item"><a asp-action="Index">Courses</a></li>
                        <li class="breadcrumb-item active">@Model.Title</li>
                    </ol>
                </nav>

                <span class="course-level-badge @(Model.Level.ToLower() == "beginner" ? "level-beginner" : Model.Level.ToLower() == "intermediate" ? "level-intermediate" : "level-advanced") mb-2">
                    @Model.Level
                </span>

                <h1 class="mb-2" style="font-size: 1.85rem;">@Model.Title</h1>

                <div class="page-header-meta">
                    <span><i class="fas fa-globe me-1"></i>@Model.Language</span>
                    <span><i class="fas fa-clock me-1"></i>@Model.EstimatedHours hrs estimated</span>
                    <span><i class="fas fa-book-open me-1"></i>@Model.Lessons.Count lessons</span>
                    <span><i class="fas fa-users me-1"></i>@Model.Enrollments.Count enrolled</span>
                </div>
            </div>

            <!-- Description -->
            <div class="content-section">
                <div class="content-section-title">
                    <i class="fas fa-info-circle text-primary"></i> About This Course
                </div>
                <p class="text-secondary mb-0">@Model.Description</p>
            </div>

            <!-- Progress (if enrolled) -->
            @if (isEnrolled && progress != null)
            {
                <div class="content-section">
                    <div class="content-section-title">
                        <i class="fas fa-chart-line text-primary"></i> Your Progress
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-4 text-center">
                            <div class="fw-bold" style="font-size: 1.5rem; color: var(--primary-color);">
                                @progress.CompletionPercentage.ToString("F0")%
                            </div>
                            <div class="text-secondary small">Completed</div>
                        </div>
                        <div class="col-4 text-center">
                            <div class="fw-bold" style="font-size: 1.5rem; color: var(--secondary-color);">
                                @progress.PointsEarned
                            </div>
                            <div class="text-secondary small">Points Earned</div>
                        </div>
                        <div class="col-4 text-center">
                            <div class="fw-bold" style="font-size: 1.5rem; color: var(--accent-color);">
                                @progress.CompletedLessons/@Model.Lessons.Count
                            </div>
                            <div class="text-secondary small">Lessons Done</div>
                        </div>
                    </div>
                    <div class="progress-custom">
                        <div class="progress-bar-custom" style="width: @(progress.CompletionPercentage)%"></div>
                    </div>
                </div>
            }

            <!-- Lessons List -->
            <div class="content-section">
                <div class="content-section-title">
                    <i class="fas fa-list text-primary"></i> Course Content
                    <span class="ms-auto badge bg-light text-dark fw-normal" style="font-size: 0.8rem;">
                        @Model.Lessons.Count lessons
                    </span>
                </div>

                @if (!Model.Lessons.Any())
                {
                    <p class="text-secondary mb-0">No lessons available yet.</p>
                }
                else
                {
                    <div class="d-flex flex-column gap-2">
                        @foreach (var lesson in Model.Lessons.OrderBy(l => l.OrderIndex))
                        {
                            <div class="d-flex align-items-center gap-3 p-3 rounded-3"
                                 style="background: var(--background-color); border: 1px solid var(--border-color);">

                                <!-- Number bubble -->
                                <div class="d-flex align-items-center justify-content-center rounded-circle flex-shrink-0"
                                     style="width: 38px; height: 38px; background: white; border: 2px solid var(--primary-color);">
                                    <strong class="text-primary" style="font-size: 0.85rem;">@lesson.OrderIndex</strong>
                                </div>

                                <!-- Info -->
                                <div class="flex-grow-1 min-w-0">
                                    <div class="fw-semibold text-truncate">@lesson.Title</div>
                                    <div class="text-secondary small">@lesson.Description</div>
                                    <div class="d-flex gap-2 mt-1 flex-wrap">
                                        <span class="badge bg-light text-dark" style="font-size: 0.75rem;">
                                            <i class="fas fa-clock me-1"></i>@lesson.DurationMinutes min
                                        </span>
                                        @if (lesson.Exercises.Any())
                                        {
                                            <span class="badge bg-light text-dark" style="font-size: 0.75rem;">
                                                <i class="fas fa-dumbbell me-1"></i>@lesson.Exercises.Count exercises
                                            </span>
                                        }
                                        @if (lesson.IsLocked && !isEnrolled)
                                        {
                                            <span class="badge bg-warning text-dark" style="font-size: 0.75rem;">
                                                <i class="fas fa-lock me-1"></i>Locked
                                            </span>
                                        }
                                    </div>
                                </div>

                                <!-- Action -->
                                @if (isEnrolled && !lesson.IsLocked)
                                {
                                    <a asp-controller="Lessons" asp-action="Details" asp-route-id="@lesson.Id"
                                       class="btn btn-sm btn-enroll flex-shrink-0">
                                        <i class="fas fa-play me-1"></i>Start
                                    </a>
                                }
                                else if (!isEnrolled)
                                {
                                    <i class="fas fa-lock text-secondary flex-shrink-0"></i>
                                }
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- What you'll learn -->
            <div class="content-section">
                <div class="content-section-title">
                    <i class="fas fa-graduation-cap text-primary"></i> What You'll Learn
                </div>
                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="d-flex gap-2">
                            <i class="fas fa-check-circle text-success mt-1 flex-shrink-0"></i>
                            <span>Master @Model.Language fundamentals</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex gap-2">
                            <i class="fas fa-check-circle text-success mt-1 flex-shrink-0"></i>
                            <span>Practice with interactive exercises</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex gap-2">
                            <i class="fas fa-check-circle text-success mt-1 flex-shrink-0"></i>
                            <span>Track your learning progress</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex gap-2">
                            <i class="fas fa-check-circle text-success mt-1 flex-shrink-0"></i>
                            <span>Earn achievements and badges</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- SIDEBAR -->
        <div class="col-lg-4">
            <div class="sidebar-panel">

                <!-- Course Icon -->
                <div class="text-center mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-2"
                         style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--primary-color), #7C3AED); font-size: 2rem; color: white;">
                        @switch (Model.Language.ToLower())
                        {
                            case "spanish":
                                <i class="fas fa-language"></i>
                                break;
                            case "french":

                                <i class="fas fa-flag"></i>
                                break;
                            case "german":

                                <i class="fas fa-book"></i>
                                break;
                            case "japanese":

                                <i class="fas fa-yen-sign"></i>
                                break;
                            default:

                                <i class="fas fa-globe"></i>
                                break;
                        }
                    </div>
                    <div class="fw-bold">@Model.Language</div>
                    <div class="text-secondary small">@Model.Level Level</div>
                </div>

                <hr class="my-3" />

                <!-- Enroll / Status -->
                @if (User.Identity?.IsAuthenticated != true)
                {
                    <p class="text-secondary small mb-3">Sign in to enroll and start learning!</p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-enroll w-100 mb-2">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In to Enroll
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary w-100">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </a>
                }
                else if (isEnrolled)
                {
                    <div class="alert alert-success py-2 mb-3">
                        <i class="fas fa-check-circle me-2"></i><strong>You're enrolled!</strong>
                    </div>
                    @if (Model.Lessons.Any())
                    {
                        var firstLesson = Model.Lessons.OrderBy(l => l.OrderIndex).First();
                        <a asp-controller="Lessons" asp-action="Details" asp-route-id="@firstLesson.Id"
                           class="btn btn-enroll w-100 mb-2">
                            <i class="fas fa-play me-2"></i>Continue Learning
                        </a>
                    }
                    <a asp-controller="Courses" asp-action="MyCourses" class="btn btn-outline-primary w-100">
                        <i class="fas fa-bookmark me-2"></i>My Courses
                    </a>
                }
                else
                {
                    <p class="text-secondary small mb-3">Enroll now for instant access to all lessons and exercises!</p>
                    <form asp-action="Enroll" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-enroll w-100">
                            <i class="fas fa-plus-circle me-2"></i>Enroll Now — It's Free
                        </button>
                    </form>
                }

                <hr class="my-3" />

                <!-- Quick Stats -->
                <div class="d-flex justify-content-around text-center">
                    <div>
                        <div class="fw-bold text-primary">@Model.Lessons.Count</div>
                        <div class="text-secondary" style="font-size: 0.8rem;">Lessons</div>
                    </div>
                    <div>
                        <div class="fw-bold text-primary">@Model.EstimatedHours h</div>
                        <div class="text-secondary" style="font-size: 0.8rem;">Duration</div>
                    </div>
                    <div>
                        <div class="fw-bold text-primary">@Model.Enrollments.Count</div>
                        <div class="text-secondary" style="font-size: 0.8rem;">Students</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>