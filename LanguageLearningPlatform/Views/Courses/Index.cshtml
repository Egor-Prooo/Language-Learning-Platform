@model IEnumerable<LanguageLearningPlatform.Data.Models.Course>

@{
    ViewData["Title"] = "Browse Courses";
    var isAuthenticated = User.Identity?.IsAuthenticated == true;
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Explore Our Courses</h1>
        <p class="lead text-secondary">Choose from a wide variety of languages and skill levels</p>
        @if (!isAuthenticated)
        {
            <div class="alert alert-info d-inline-block">
                <i class="fas fa-info-circle me-2"></i>
                <a asp-area="Identity" asp-page="/Account/Login" class="alert-link">Sign in</a> or
                <a asp-area="Identity" asp-page="/Account/Register" class="alert-link">create an account</a> to enroll in courses
            </div>
        }
    </div>

    <!-- Filters -->
    <div class="filter-section">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-5">
                    <label class="filter-label">
                        <i class="fas fa-language me-2"></i>Language
                    </label>
                    <select name="language" class="form-select form-select-custom">
                        <option value="">All Languages</option>
                        <option value="Spanish" selected="@(ViewBag.SelectedLanguage == "Spanish")">Spanish</option>
                        <option value="French" selected="@(ViewBag.SelectedLanguage == "French")">French</option>
                        <option value="German" selected="@(ViewBag.SelectedLanguage == "German")">German</option>
                        <option value="Japanese" selected="@(ViewBag.SelectedLanguage == "Japanese")">Japanese</option>
                        <option value="Italian" selected="@(ViewBag.SelectedLanguage == "Italian")">Italian</option>
                        <option value="Chinese" selected="@(ViewBag.SelectedLanguage == "Chinese")">Chinese</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="filter-label">
                        <i class="fas fa-signal me-2"></i>Level
                    </label>
                    <select name="level" class="form-select form-select-custom">
                        <option value="">All Levels</option>
                        <option value="Beginner" selected="@(ViewBag.SelectedLevel == "Beginner")">Beginner</option>
                        <option value="Intermediate" selected="@(ViewBag.SelectedLevel == "Intermediate")">Intermediate</option>
                        <option value="Advanced" selected="@(ViewBag.SelectedLevel == "Advanced")">Advanced</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-enroll w-100">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Results Count -->
    <div class="my-4">
        <h5 class="text-secondary">
            <i class="fas fa-list me-2"></i>
            Showing @Model.Count() course@(Model.Count() != 1 ? "s" : "")
            @if (!string.IsNullOrEmpty(ViewBag.SelectedLanguage) || !string.IsNullOrEmpty(ViewBag.SelectedLevel))
            {
                <span> - </span>
                @if (!string.IsNullOrEmpty(ViewBag.SelectedLanguage))
                {
                    <span class="badge bg-primary">@ViewBag.SelectedLanguage</span>
                }
                @if (!string.IsNullOrEmpty(ViewBag.SelectedLevel))
                {
                    <span class="badge bg-secondary">@ViewBag.SelectedLevel</span>
                }
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">
                    <i class="fas fa-times me-1"></i>Clear Filters
                </a>
            }
        </h5>
    </div>

    <!-- Courses Grid -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-search" style="font-size: 4rem; color: var(--text-secondary); opacity: 0.5;"></i>
            <h3 class="mt-3">No courses found</h3>
            <p class="text-secondary">Try adjusting your filters</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-redo me-2"></i>Reset Filters
            </a>
        </div>
    }
    else
    {
        <div class="row g-4 mt-2">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="course-card">
                        <div class="course-card-image">
                            @switch (course.Language.ToLower())
                            {
                                case "spanish":
                                    <i class="fas fa-language"></i>
                                    break;
                                case "french":
                                    <i class="fas fa-flag"></i>
                                    break;
                                case "german":
                                    <i class="fas fa-book"></i>
                                    break;
                                case "japanese":
                                    <i class="fas fa-yen-sign"></i>
                                    break;
                                default:
                                    <i class="fas fa-globe"></i>
                                    break;
                            }
                        </div>
                        <div class="course-card-body">
                            <span class="course-level-badge @(course.Level.ToLower() == "beginner" ? "level-beginner" : course.Level.ToLower() == "intermediate" ? "level-intermediate" : "level-advanced")">
                                @course.Level
                            </span>
                            <h3 class="course-title">@course.Title</h3>
                            <p class="course-language">
                                <i class="fas fa-globe me-1"></i> @course.Language
                                <span class="ms-2">
                                    <i class="fas fa-clock me-1"></i> @course.EstimatedHours hours
                                </span>
                            </p>
                            <p class="course-description">@course.Description</p>
                            <div class="course-meta">
                                <span>
                                    <i class="fas fa-book-open me-1"></i>
                                    @course.Lessons.Count Lessons
                                </span>
                                <span>
                                    <i class="fas fa-users me-1"></i>
                                    @course.Enrollments.Count Students
                                </span>
                            </div>
                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-enroll w-100">
                                    <i class="fas fa-eye me-2"></i>View Course
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>