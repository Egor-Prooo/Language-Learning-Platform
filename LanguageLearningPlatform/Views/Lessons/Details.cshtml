@model LanguageLearningPlatform.Data.Models.Lesson

@{
    ViewData["Title"] = Model.Title;
    var courseLessons = ViewBag.CourseLessons as List<LanguageLearningPlatform.Data.Models.Lesson>;
    var currentIndex = ViewBag.CurrentLessonIndex as int? ?? 0;
    var hasNext = currentIndex < (courseLessons?.Count - 1 ?? 0);
    var hasPrevious = currentIndex > 0;
}

<div class="container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Courses" asp-action="MyCourses">My Courses</a></li>
            <li class="breadcrumb-item"><a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId">@Model.Course.Title</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Main Lesson Content -->
        <div class="col-lg-8">
            <div class="course-card mb-4">
                <div class="course-card-body">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <span class="badge" style="background-color: var(--primary-color); color: white; padding: 0.5rem 1rem; font-size: 0.875rem;">
                                Lesson @Model.OrderIndex
                            </span>
                            <h1 class="mt-3 mb-2">@Model.Title</h1>
                            <p class="text-secondary">@Model.Description</p>
                            <div class="d-flex gap-3 text-secondary small">
                                <span><i class="fas fa-clock me-1"></i>@Model.DurationMinutes minutes</span>
                                @if (Model.Exercises.Any())
                                {
                                    <span><i class="fas fa-dumbbell me-1"></i>@Model.Exercises.Count exercises</span>
                                }
                            </div>
                        </div>
                    </div>

                    <hr />

                    <!-- Lesson Content -->
                    <div class="lesson-content">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>

            <!-- Exercises Section -->
            @if (Model.Exercises.Any())
            {
                <div class="course-card mb-4">
                    <div class="course-card-body">
                        <!-- Progress Tracker -->
                        <div class="lesson-progress mb-4">
                            <div class="lesson-progress-text">
                                <span id="completed-count">0</span> / @Model.Exercises.Count exercises completed
                            </div>
                            <div class="lesson-progress-bar-container">
                                <div class="lesson-progress-bar" id="progress-bar" style="width: 0%"></div>
                            </div>
                        </div>

                        <h3 class="mb-4">
                            <i class="fas fa-dumbbell me-2"></i>Practice Exercises
                        </h3>

                        @foreach (var exercise in ViewBag.Exercises as List<LanguageLearningPlatform.Core.Models.ExerciseViewModel>)
                        {
                            <div class="exercise-item"
                                 data-exercise-id="@exercise.Id"
                                 data-correct-answer="@exercise.CorrectAnswer"
                                 data-explanation="@exercise.Explanation"
                                 data-type="@exercise.Type">

                                <div class="exercise-header">
                                    <h5 class="exercise-title">@exercise.Title</h5>
                                    <div class="exercise-points">
                                        <i class="fas fa-star"></i>
                                        <span>@exercise.Points pts</span>
                                    </div>
                                </div>

                                <div class="exercise-content">
                                    <p class="exercise-question">@exercise.Content</p>

                                    @if (exercise.Type == "MultipleChoice" && exercise.Options.Any())
                                    {
                                        <div class="exercise-options">
                                            @foreach (var option in exercise.Options)
                                            {
                                                <button type="button"
                                                        class="exercise-option"
                                                        data-value="@option">
                                                    @option
                                                </button>
                                            }
                                        </div>
                                    }
                                    else if (exercise.Type == "Translation" || exercise.Type == "FillInBlank")
                                    {
                                        <input type="text"
                                               class="exercise-input"
                                               placeholder="Type your answer here..."
                                               data-exercise-id="@exercise.Id" />
                                    }

                                    @if (!string.IsNullOrEmpty(exercise.Hint))
                                    {
                                        <div class="exercise-hint" style="display: none;">
                                            <i class="fas fa-lightbulb"></i>
                                            <div>
                                                <strong>Hint:</strong> @exercise.Hint
                                            </div>
                                        </div>
                                    }

                                    <div class="exercise-feedback" style="display: none;"></div>
                                </div>

                                <div class="exercise-actions">
                                    @if (!string.IsNullOrEmpty(exercise.Hint))
                                    {
                                        <button class="btn-hint" onclick="toggleHint(this)">
                                            <i class="fas fa-lightbulb me-1"></i>Show Hint
                                        </button>
                                    }
                                    <button class="btn-check-answer" disabled>
                                        <i class="fas fa-check me-1"></i>Check Answer
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Navigation -->
            <div class="d-flex justify-content-between">
                @if (hasPrevious && courseLessons != null)
                {
                    var previousLesson = courseLessons[currentIndex - 1];
                    <a asp-action="Details" asp-route-id="@previousLesson.Id" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Previous Lesson
                    </a>
                }
                else
                {
                    <div></div>
                }

                @if (hasNext && courseLessons != null)
                {
                    var nextLesson = courseLessons[currentIndex + 1];
                    <a asp-action="Details" asp-route-id="@nextLesson.Id" class="btn btn-enroll">
                        Next Lesson<i class="fas fa-arrow-right ms-2"></i>
                    </a>
                }
                else
                {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" class="btn btn-success">
                        <i class="fas fa-check-circle me-2"></i>Complete Course
                    </a>
                }
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Course Navigation -->
            <div class="course-card sticky-top" style="top: 20px;">
                <div class="course-card-body">
                    <h5 class="mb-3">
                        <i class="fas fa-list me-2"></i>Course Content
                    </h5>

                    @if (courseLessons != null && courseLessons.Any())
                    {
                        <div class="list-group list-group-flush">
                            @for (int i = 0; i < courseLessons.Count; i++)
                            {
                                var lesson = courseLessons[i];
                                var isActive = i == currentIndex;

                                <a asp-action="Details" asp-route-id="@lesson.Id"
                                   class="list-group-item list-group-item-action @(isActive ? "active" : "") border-0 px-0 py-2">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle @(isActive ? "bg-white text-primary" : "bg-light") d-flex align-items-center justify-content-center"
                                             style="width: 30px; height: 30px; flex-shrink: 0; font-size: 0.75rem;">
                                            @if (isActive)
                                            {
                                                <i class="fas fa-play"></i>
                                            }
                                            else
                                            {
                                                <strong>@lesson.OrderIndex</strong>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="small fw-semibold">@lesson.Title</div>
                                            <div class="text-secondary" style="font-size: 0.75rem;">
                                                <i class="fas fa-clock me-1"></i>@lesson.DurationMinutes min
                                            </div>
                                        </div>
                                        @if (lesson.IsLocked)
                                        {
                                            <i class="fas fa-lock text-secondary"></i>
                                        }
                                    </div>
                                </a>
                            }
                        </div>
                    }

                    <hr />

                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId"
                       class="btn btn-outline-primary w-100 btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Course
                    </a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/exercise.js"></script>
    }

</div>

<style>
    .lesson-content {
        font-size: 1.05rem;
        line-height: 1.8;
    }

        .lesson-content h2 {
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
        }

        .lesson-content ul {
            margin-left: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .lesson-content li {
            margin-bottom: 0.5rem;
        }

    .exercise-item {
        background-color: #F9FAFB;
        transition: all 0.3s ease;
    }

        .exercise-item:hover {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

    .list-group-item.active {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
</style>